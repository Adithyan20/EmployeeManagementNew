@model IEnumerable<EmployeeViewModel>

<h3 class="display-4">Employees</h3>
<button class="btn btn-success" data-toggle="modal" data-target="#myModal"> Create New Employee</button>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="createform">
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" required id="name" name="name" pattern="[a-zA-Z/s/.]{1,15}"/><br>
                    <label>Department:</label><br>                  
                    <select style="width:100%" name="department"  required id="dept">
                        <option value="Choose an option">Choose an option</option>
                        <option value="Finance"> Finance</option>
                        <option value="Developer"> Developer</option>
                        <option value="CEO"> CEO</option>
                        <option value="HR">HR </option>
                    </select><br />
                    <label>Age:</label><br>
                    <input type="number" style="width:100%"required id="age" name="age" min="21" max="60"/><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%"required id="address" name="address" pattern="[a-zA-Z/s/,]{1-30}" maxlength="30"/><br><br><br>
                    <input type="submit" value="create">
                </form>

            </div>

        </div>

    </div>
</div>
<div class="modal fade" id="myModalUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="updateform">
                    <label >ID:</label><br>
                    <input type ="text" style="width:100%" id="eid" name="id"/><br>
                    <label>Name:</label><br>
                    <input type="text" style="width:100%" id="ename" name="name"pattern="[a-zA-Z/s/.]{1,15}" /><br>
                    <label>Department:</label><br>
                    <select style="width:100%" name="department" id="edept">
                        <option > Choose an option</option>
                        <option value="Finance"> Finance</option>
                        <option value="Developer"> Developer</option>
                        <option value="CEO"> CEO</option>
                        <option value="HR">HR </option>
                    </select><br />
                    <label>Age:</label><br>
                    <input type="number" style="width:100%" id="eage" name="age" min="18" max="60" /><br>
                    <label>Address:</label><br>
                    <input type="text" style="width:100%" id="eaddress" name="address" pattern="[a-zA-Z/s/,]{1-15}" /><br><br><br>
                    <input type="submit" value="create">
                </form>

            </div>

        </div>

    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                <b>Id</b>
            </td>
            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Department</b>
            </td>
            <td>
            </td>
        </tr>

    </thead>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Department</td>
            <td>
                <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> Details</button>
                <button class="btn btn-info employeeEdit" data-toggle="modal" data-target="#myModalUpdate" data-id="@employee.Id"> Edit</button>
                <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> Delete</button>
            </td>
        </tr>
    }
</table>

<div id="EmployeeCard">
    
</div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
